{
	"name": "clean-fastify",
	"module": "index.ts",
	"type": "module",
	"private": true,
	"scripts": {
		"start:server": "bun run apps/api/serve.ts",
		"dev:server": "bun run --hot --watch apps/api/serve.ts",
		"build:server": "bun build apps/api/serve.ts --outdir=dist --target=node",
		"start:worker": "bun run apps/worker/index.ts",
		"dev:worker": "bun run --hot --watch apps/worker/index.ts",
		"build:worker": "bun build apps/worker/index.ts --outdir=dist --target=node",
		"start:api": "bun run apps/api/serve.ts",
		"dev:api": "bun run --hot --watch apps/api/serve.ts",
		"build:api": "bun build apps/api/serve.ts --outdir=dist --target=node",
		"lint": "bun run eslint . --ext .ts,.js",
		"format": "bun run prettier --write .",
		"prepare": "husky install",
		"dev:all": "concurrently --names \"server,worker\" --prefix-colors \"blue,magenta\" \"bun run dev:server\" \"bun run dev:worker\"",
		"build:all": "concurrently --names \"server,worker\" --prefix-colors \"blue,magenta\" \"bun run build:server\" \"bun run build:worker\"",
		"start:all": "concurrently --names \"server,worker\" --prefix-colors \"blue,magenta\" \"bun run start:server\" \"bun run start:worker\"",
		"db:postgres:seed": "bun run ./infra/seed/index.ts",
		"migrate:clickhouse": "bun run infra/clickhouse/scripts/migrate.ts migrate",
		"migrate:clickhouse:status": "bun run infra/clickhouse/scripts/migrate.ts status"
	},
	"devDependencies": {
		"@types/bcryptjs": "^3.0.0",
		"@types/bun": "latest",
		"@types/crypto-js": "^4.2.2",
		"@types/node": "^24.7.2",
		"@types/nodemailer": "^7.0.3",
		"@types/pg": "^8.15.5",
		"@typescript-eslint/eslint-plugin": "^8.15.0",
		"@typescript-eslint/parser": "^8.15.0",
		"concurrently": "^9.2.1",
		"drizzle-kit": "^0.31.5",
		"eslint": "^9.15.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.2.1",
		"husky": "^9.1.7",
		"prettier": "^3.3.3",
		"tsx": "^4.20.6",
		"typescript-eslint": "^8.46.0"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"@clickhouse/client": "^1.12.1",
		"@fastify/autoload": "^6.3.1",
		"@fastify/cors": "^11.1.0",
		"@fastify/helmet": "^13.0.2",
		"@fastify/jwt": "^10.0.0",
		"@fastify/rate-limit": "^10.3.0",
		"@fastify/redis": "^7.1.0",
		"@fastify/swagger": "^9.6.1",
		"@scalar/fastify-api-reference": "^1.43.1",
		"ajv": "^8.17.1",
		"bcryptjs": "^3.0.2",
		"bullmq": "^5.61.0",
		"crypto-js": "^4.2.0",
		"dayjs": "^1.11.18",
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.44.6",
		"fastify": "^5.6.1",
		"fastify-plugin": "^5.1.0",
		"fastify-type-provider-zod": "^6.1.0",
		"ioredis": "^5.8.1",
		"nodemailer": "^7.0.10",
		"pg": "^8.16.3",
		"pino": "^10.0.0",
		"pino-pretty": "^13.1.2",
		"reflect-metadata": "^0.2.2",
		"tsyringe": "^4.10.0",
		"zod": "^4.3.5"
	},
	"lint-staged": {
		"*.{js,ts,jsx,tsx}": [
			"eslint --fix",
			"prettier --write"
		]
	}
}
